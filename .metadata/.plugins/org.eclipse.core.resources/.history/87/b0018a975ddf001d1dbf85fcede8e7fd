package com.example.demo.controller;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.RestController;

@RestController
public class WelcomeDemoController {

	@GetMapping("/signup")
	public String Signup() {
		return "this is signup page";
	}
	
//	@GetMapping("/landingpage/{username}")
	@GetMapping("/landingpage")

	public String LandingPage(@RequestParam String username) {
//		public String LandingPage(@PathVariable("username") String username) {
		return "this is landingpage page "+username;
	}

}
